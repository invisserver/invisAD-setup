# Vor deeplinks schuetzen
# Regex muss getestet werden
location ~ ^/(.*\.(jpe?g|png|gif))$ {
    valid_referers none blocked "^http://invis.invis-net.loc" "^https://your.ddns-domain.net";
    if ($invalid_referer) {
        return 403;
    }
}

