#Konfigurationsdaten
conffile="/etc/invis/invis.conf"

# Funktionen
# Werte aus Konfigurationsdatendatei extrahieren
# $1 = Konfigurationsdatei, $2 = Parameter, $3 Wert (Feld)
getconfdata() {
    cat $1 |grep "$2" | cut -d ":" -f $3
}

services=`getconfdata $conffile "zServices" "2"`

case "$1" in
    start)
	for service in ${services[*]}; do
	    systemctl start zarafa-$service.service
	done
	;;
    stop)
	for service in `echo ${services[*]} | tr " " '\n' |tac`; do
	    systemctl stop zarafa-$service.service
	done
	;;
    status)
	for service in ${services[*]}; do
	    systemctl status zarafa-$service.service
	done
	;;
    *)
	echo "Usage: runzarafa {start|stop|status}"
	;;
esac
